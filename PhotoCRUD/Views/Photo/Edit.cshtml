@model PhotoCRUD.Models.Photo

@{
	ViewData["Title"] = "Edycja zdjęcia";
}

<h1>Edycja</h1>

<h4>Zdjęcie</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="DateTimeTaken" class="control-label"></label>
				@{
					var formattedDateTime = Model.DateTimeTaken.ToString("yyyy-MM-ddTHH:mm");
				}
				<input asp-for="DateTimeTaken" class="form-control" type="datetime-local" value="@formattedDateTime"/>
				<span asp-validation-for="DateTimeTaken" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Camera" class="control-label"></label>
				<input asp-for="Camera" class="form-control"/>
				<span asp-validation-for="Camera" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AuthorEmail" class="control-label"></label>
				<input asp-for="AuthorEmail" class="form-control"/>
				<span asp-validation-for="AuthorEmail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Resolution" class="control-label"></label>
				<input asp-for="Resolution" class="form-control"/>
				<span asp-validation-for="Resolution" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Format" class="control-label"></label>
				<input asp-for="Format" class="form-control"/>
				<span asp-validation-for="Format" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}